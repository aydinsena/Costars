<h1> Welcome to your wallet {{userInfo.name}}</h1>

<form action="/user/wallet" method="POST">
<label> Bitcoin Name
<select name="name" >
    {{#each data.data}}
     <option>{{name}}</option>
    {{/each}}
</select>
</label>
<label > Amount
    <input type="text" name="amount" placeholder="amount">
</label>
<button type="submit">Add the value</button>
</form>

<ul>

        {{#each walletInfo}}
        <li> name: {{name}}, amount: {{amount}} sum:{{sum}} currentprice :{{currentPrice}}</li> 
        {{/each}}

</ul>