<h1 class="lead">Login Page</h1>
<div class="form-container">
  <form action="/auth/login" method="POST" class="edit-form">
    <div class="mb-3">
      <label for="email" class="form-label"> Email </label>
      <input
        type="email"
        name="email"
        placeholder="Your email"
        class="form-control"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Your password"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-submit" style="color: white !important;">Login</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>